<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listviewbg"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp" >

    <View
        android:id="@+id/flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="1" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/imageView1"
        android:orientation="vertical" >

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肌肤管家—您的智能肌肤测试仪"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/faqiren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人:"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/didian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瑞格  北京市东城区"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pinlun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/112条评论"
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/wanchengdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="目前完成 30%"
                android:textColor="@color/black"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:text="目标：30天   ¥5000"
                android:textColor="@color/blue"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/ic_hotel_distance" />

            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="@color/texi"
                android:text="50个赞"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/jiezhiriqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true"
                android:background="@color/texi"
                android:text="截止日期：2015年02月14日"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:src="@drawable/mm_submenu" />

    <TextView
        android:id="@+id/textqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView8"
        android:text=" "
        android:textSize="12sp" />

</RelativeLayout>